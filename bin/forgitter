#!/usr/bin/env ruby

require 'forgitter'
require 'forgitter/cli'

option_parser = Forgitter::CLI::OptionParser.new
options = option_parser.parse(ARGV)

types = []
types << ARGV.pop until ARGV.empty?
if types.empty?
  types = Forgitter::DEFAULT_TYPES
  #puts option_parser.help
  #exit(1)
end

runner = Forgitter::Runner.new(types, options.text_editors, options.stdout)
runner.run
